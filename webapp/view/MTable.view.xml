<mvc:View controllerName="sap.ui.demo.MyApp.controller.MTable" displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:custom="sap.ui.demo.MyApp.control">
	<Page id="page" title="{i18n>mTablePageTitle} x {JSONStateModel>/State}" enableScrolling="true" class="sapUiContentPadding">
		<content>
			<custom:ButtonBack text="{i18n>backNavBtnTitle}" press="onBackNavBtnTitle"></custom:ButtonBack>

			<Table items="{JSONBufferModel>/Products}" busy="{= ${JSONStateModel>/State} === 'Done' ? false : true}">
				<columns>
					<Column>
						<Label text="ProductName" />
					</Column>
					<Column>
						<Label text="SupplierID" />
					</Column>
					<Column>
						<Label text="CategoryID" />
					</Column>
					<Column>
						<Label text="QuantityPerUnit" />
					</Column>
					<Column>
						<Label text="UnitPrice" />
					</Column>
					<Column>
						<Label text="UnitsInStock" />
					</Column>
					<Column>
						<Label text="UnitsOnOrder" />
					</Column>
					<Column>
						<Label text="ReorderLevel" />
					</Column>
					<Column>
						<Label text="Discontinued" />
					</Column>
				</columns>
				<ColumnListItem>
					<Text text="{JSONBufferModel>ProductName}" />
					<Text text="{JSONBufferModel>SupplierID}" />
					<Text text="{JSONBufferModel>CategoryID}" />
					<Text text="{JSONBufferModel>QuantityPerUnit}" />
					<Text text="{JSONBufferModel>UnitPrice}" />
					<Text text="{JSONBufferModel>UnitsInStock}" />
					<Text text="{JSONBufferModel>UnitsOnOrder}" />
					<Text text="{JSONBufferModel>ReorderLevel}" />
					<Text text="{JSONBufferModel>Discontinued}" />
				</ColumnListItem>
			</Table>

		</content>
	</Page>
</mvc:View>